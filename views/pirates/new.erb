<div>
    <label for="name" style>Ship 2 name:</label>
    <input type="text" name="pirate[ships][][name]" id="ship_name_2" required>
</div>
<div>
    <label for="name" style>Ship 2 Type:</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_2" required>
</div>
<div>
    <label for="name" style>Ship 2 Booty:</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_2" required>
</div>
