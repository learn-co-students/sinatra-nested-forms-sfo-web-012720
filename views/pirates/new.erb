    <label for="name" style>Pirate Height:</label>
    <input type="text" name="pirate[height]" id="pirate_height" required>
</div>

<div>
    <label for="name" style>Ship 1 name:</label>
    <input type="text" name="pirate[ships][][name]" id="ship_name_1" required>
</div>
<div>
    <label for="name" style>Ship 1 Type:</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_1" required>
</div>
<div>
    <label for="name" style>Ship 1 Booty:</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_1" required>
